+"use client";
+
+import { useState, useTransition } from "react";
+import { supabase } from "~/lib/supabase";
+import { log, error as logError } from "~/lib/logger";
+
+/**
+ * Encapsulated supabase authentication actions.  This hook uses
+ * `useTransition` to ensure that the UI remains responsive while
+ * asynchronous authentication operations (sign in, sign up, sign out)
+ * are running.  It centralises success/error handling and logging.
+ */
+export function useSupabaseAuthActions() {
+  // React 18 transition state; `pending` is true while a transition is running
+  const [pending, startTransition] = useTransition();
+  // Expose error and success messages for UI rendering
+  const [errorMsg, setErrorMsg] = useState<string | null>(null);
+  const [successMsg, setSuccessMsg] = useState<string | null>(null);
+
+  /**
+   * Sign in a user using Supabase.  Resets messages before starting and
+   * logs results.  Errors are captured and stored in `errorMsg`.
+   */
+  const signIn = (email: string, password: string) => {
+    setErrorMsg(null);
+    setSuccessMsg(null);
+    startTransition(async () => {
+      try {
+        log("ğŸ” Login: Versuche Anmeldung fÃ¼r:", email);
+        const { data, error } = await supabase.auth.signInWithPassword({
+          email,
+          password,
+        });
+        if (error) {
+          logError("âŒ Login: Anmeldung fehlgeschlagen:", error.message);
+          setErrorMsg(error.message);
+        } else {
+          log("âœ… Login: Anmeldung erfolgreich fÃ¼r:", data.user?.email);
+          setSuccessMsg("Anmeldung erfolgreich!");
+        }
+      } catch (err) {
+        logError("âŒ Login: Unerwarteter Fehler:", err);
+        setErrorMsg(err instanceof Error ? err.message : "Unbekannter Fehler");
+      }
+    });
+  };
+
+  /**
+   * Register a new user using Supabase.  Handles success and error messages.
+   */
+  const signUp = (email: string, password: string) => {
+    setErrorMsg(null);
+    setSuccessMsg(null);
+    startTransition(async () => {
+      try {
+        log("ğŸ“ SignUp: Versuche Registrierung fÃ¼r:", email);
+        const { data, error } = await supabase.auth.signUp({ email, password });
+        if (error) {
+          logError("âŒ SignUp: Registrierung fehlgeschlagen:", error.message);
+          setErrorMsg(error.message);
+        } else {
+          log("âœ… SignUp: Registrierung erfolgreich fÃ¼r:", data.user?.email);
+          setSuccessMsg(
+            "Registrierung erfolgreich! Bitte bestÃ¤tige deine Eâ€‘Mail.",
+          );
+        }
+      } catch (err) {
+        logError("âŒ SignUp: Unerwarteter Fehler:", err);
+        setErrorMsg(err instanceof Error ? err.message : "Unbekannter Fehler");
+      }
+    });
+  };
+
+  /**
+   * Sign the current user out.  On success a success message is set.
+   */
+  const signOut = () => {
+    setErrorMsg(null);
+    setSuccessMsg(null);
+    startTransition(async () => {
+      try {
+        const { error } = await supabase.auth.signOut();
+        if (error) {
+          logError("âŒ Logout: Abmeldung fehlgeschlagen:", error.message);
+          setErrorMsg(error.message);
+        } else {
+          log("âœ… Logout: Abmeldung erfolgreich");
+          setSuccessMsg("Abmeldung erfolgreich!");
+        }
+      } catch (err) {
+        logError("âŒ Logout: Unerwarteter Fehler:", err);
+        setErrorMsg(err instanceof Error ? err.message : "Unbekannter Fehler");
+      }
+    });
+  };
+
+  return {
+    signIn,
+    signUp,
+    signOut,
+    pending,
+    errorMsg,
+    successMsg,
+  };
+}
